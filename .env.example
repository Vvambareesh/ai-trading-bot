# =============================================================================
# AI Trading Bot Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys and settings

# =============================================================================
# API KEYS - REQUIRED FOR LIVE TRADING
# =============================================================================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Delta Exchange webhook URL from TradingBot page
DELTA_WEBHOOK_URL=https://delta.exchange/webhook/your_webhook_id

# Optional: Delta Exchange API keys for advanced features
DELTA_API_KEY=your_delta_api_key_here
DELTA_API_SECRET=your_delta_api_secret_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading mode: 'paper' for simulation, 'live' for real trading
TRADING_MODE=paper

# Initial capital in INR (₹1000 recommended for starting)
INITIAL_CAPITAL_INR=1000

# Maximum risk per trade as percentage (5% = ₹50 max risk for ₹1000 capital)
RISK_PER_TRADE=5

# Maximum number of concurrent positions
MAX_CONCURRENT_TRADES=3

# Conviction threshold for live trading (95%+ recommended)
CONVICTION_THRESHOLD=95

# Analysis check interval in seconds (300 = 5 minutes)
CHECK_INTERVAL=300

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================
# Active strategy: sma, rsi, macd, bollinger, volume, hybrid
STRATEGY=hybrid

# Strategy parameters (can be customized)
# SMA Strategy
SMA_FAST_PERIOD=10
SMA_SLOW_PERIOD=20

# RSI Strategy
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# MACD Strategy
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9

# Bollinger Bands Strategy
BOLLINGER_PERIOD=20
BOLLINGER_STD_DEV=2

# Volume Strategy
VOLUME_PERIOD=20
VOLUME_MULTIPLIER=1.5

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Stop loss percentage (2% below entry for long positions)
STOP_LOSS_PCT=2

# Take profit percentage (6% above entry for 3:1 risk:reward)
TAKE_PROFIT_PCT=6

# Daily loss limit percentage (10% maximum daily loss)
DAILY_LOSS_LIMIT=10

# Maximum drawdown limit (25% portfolio drawdown limit)
MAX_DRAWDOWN_LIMIT=25

# Position sizing method: kelly, fixed, volatility
POSITION_SIZING_METHOD=kelly

# Maximum position size as percentage of portfolio
MAX_POSITION_SIZE=20

# =============================================================================
# DATA SOURCES
# =============================================================================
# Primary data source: coingecko, yfinance, ccxt
PRIMARY_DATA_SOURCE=coingecko

# CCXT Exchange (if using ccxt data source)
CCXT_EXCHANGE=binance

# Data cache duration in seconds
DATA_CACHE_DURATION=300

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# AI model temperature (0.0-1.0, lower = more conservative)
AI_TEMPERATURE=0.3

# Maximum AI response tokens
AI_MAX_TOKENS=1000

# AI conviction weighting (0.0-1.0, how much to weight AI vs technical)
AI_CONVlCTION_WEIGHT=0.6

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
# Dashboard host and port
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8050

# Dashboard refresh interval in seconds
DASHBOARD_REFRESH_INTERVAL=10

# Enable debug mode
DASHBOARD_DEBUG=False

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (empty for console only)
LOG_FILE=

# Maximum log file size in MB
MAX_LOG_SIZE_MB=10

# =============================================================================
# BACKTESTING CONFIGURATION
# =============================================================================
# Backtest initial capital
BACKTEST_INITIAL_CAPITAL=1000

# Backtest period (6 months recommended for validation)
BACKTEST_PERIOD=180

# Backtest data interval (1h for hourly, 1d for daily)
BACKTEST_INTERVAL=1h

# Enable walk-forward optimization
BACKTEST_WALK_FORWARD=True

# =============================================================================
# NOTIFICATIONS (OPTIONAL)
# =============================================================================
# Email notifications (requires SMTP configuration)
NOTIFICATION_EMAIL_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_TO_EMAIL=alerts@example.com

# Discord webhook notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id

# Telegram bot notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# SECURITY
# =============================================================================
# Enable 2FA for live trading (HIGHLY RECOMMENDED)
ENABLE_2FA=True

# API rate limiting (requests per minute)
API_RATE_LIMIT=50

# Enable order confirmation before execution (for live trading)
ORDER_CONFIRMATION_REQUIRED=False

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Enable performance metrics collection
PERFORMANCE_MONITORING=True

# Metrics retention period in days
METRICS_RETENTION_DAYS=90

# Enable automated strategy optimization
AUTO_OPTIMIZATION=False
OPTIMIZATION_INTERVAL_DAYS=7

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Enable debug mode (verbose logging)
DEBUG=False

# Use mock data for testing
USE_MOCK_DATA=False

# Enable feature flags
FEATURE_ADVANCED_ORDERS=True
FEATURE_PORTFOLIO_OPTIMIZATION=True
FEATURE_AI_ENHANCEMENT=True
FEATURE_RISK_PARITY=True

# =============================================================================
# DELTA EXCHANGE SPECIFIC
# =============================================================================
# Delta Exchange environment: production, staging
DELTA_ENVIRONMENT=production

# Trading product type: futures, options
DELTA_PRODUCT_TYPE=futures

# Enable position leverage (1-100x)
DELTA_LEVERAGE=1

# Order types to use: market, limit, stop
DELTA_ORDER_TYPES=market,limit

# =============================================================================
# CRYPTOCURRENCY SPECIFIC
# =============================================================================
# Supported symbols (can be customized)
SUPPORTED_SYMBOLS=BTC,ETH,ADA,DOGE,SHIB

# Minimum trade amount in USD
MIN_TRADE_AMOUNT_USD=10

# Maximum slippage tolerance percentage
MAX_SLIPPAGE_PCT=1

# Enable multi-timeframe analysis
MULTI_TIMEFRAME_ANALYSIS=True
TIMEFRAMES=1h,4h,1d,1w

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Enable automatic backup of trading data
AUTO_BACKUP=True

# Backup interval in hours
BACKUP_INTERVAL_HOURS=6

# Backup directory path
BACKUP_DIR=./backups

# Maximum number of backups to keep
MAX_BACKUPS=30

# =============================================================================
# EXAMPLE USAGE
# =============================================================================
# To start paper trading:
# python main.py --mode paper --strategy hybrid --capital 1000

# To start live trading (after paper testing):
# python main.py --mode live --strategy hybrid --conviction 95

# To run dashboard:
# python dashboard.py

# To run backtesting:
# python backtester.py

# To install dependencies:
# pip install -r requirements.txt

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit your .env file to version control
# 2. Use strong, unique API keys
# 3. Enable 2FA on all exchange accounts
# 4. Start with paper trading to test your strategies
# 5. Use conviction thresholds >=95% for live trading
# 6. Monitor your positions and risk metrics regularly
# 7. Keep backup of your trading data and configuration
# 8. Use VPN for additional security when trading
# 9. Regularly rotate API keys
# 10. Test with small amounts before scaling up